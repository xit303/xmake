{
    "name" : "xmakefile",
    "version" : "1.0.0",
    "description" : "A simple xmakefile for building a C++ project",
    "author" : "xit",
    "license" : "MIT",
    "configurations": [
        {
            "name": "Debug",
            "build_type": "Debug",
            "build_dir": ".bin",
            "output_filename": "xmake",
            "compiler_path": "",
            "compiler": "g++",
            "linker": "g++",
            "c_flags": "-std=c11 -Wall -Wextra -pedantic",
            "cxx_flags": "-std=c++17 -Wall -Wextra -pedantic",
            "linker_flags": "-lm -lstdc++",
            "include_paths": [
                "include",
                "lib/ArduinoJson/src"
            ],
            "source_paths": [
                "src/"
            ],
            "exclude_paths": [
            ],
            "exclude_files": [
            ],
            "library_paths": [
            ],
            "libraries": [
            ],
            "pre_build_commands": [
                
            ],
            "post_build_commands": [
                "mkdir -p .bin/Fonts && cp Resources/Fonts/*.* .bin/Fonts/",
                "mkdir -p .bin/Shaders && cp Resources/Shaders/*.* .bin/Shaders/"
            ],
            "pre_run_commands": [
                "echo 'Running...'"
            ],
            "post_run_commands": [
                "echo 'Run completed!'"
            ],
            "install_commands": [
                "mkdir -p /usr/local/bin",
                "cp .bin/xmake /usr/local/bin/"
            ],
            "uninstall_commands": [
                "rm -f /usr/local/bin/xmake"
            ],
            "clean_commands": [
                "rm -rf .bin"
            ]
        }
    ]
}