{
    "name" : "xmakefile",
    "version" : "1.0.0",
    "description" : "A simple xmakefile for building a C++ project",
    "author" : "Your Name",
    "license" : "MIT",
    "configurations": [
        {
            "name": "Debug",
            "build_type": "Debug",
            "build_dir": "build/debug",
            "output_filename": "my_project_debug",
            "compiler_path": "/usr/bin/g++",
            "compiler": "g++",
            "c_flags": "-std=c11 -Wall -Wextra -pedantic",
            "cpp_flags": "-std=c++17 -Wall -Wextra -pedantic",
            "linker_flags": "-lm",
            "include_paths": [
                "include",
                "src"
            ],
            "source_paths": [
                "src/",
                "lib/"
            ],
            "library_paths": [
                "lib/"
            ],
            "libraries": [
                "mylib"
            ]
        }
    ]
}